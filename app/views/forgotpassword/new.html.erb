<h2>Forgot your password?</h2>

<%= form_with url: forgot_password_path do |form| %>
  <div class='mb-3'>
    <%= form.label :email %>
    <%= form.text_field :email, class: 'form-control', placeholder: 'email@domain.com' %>
  </div>
  <div  class='mb-3'>
    <%= form.submit 'Submit', class:'btn btn-primary' %>
  </div>
<% end %>
