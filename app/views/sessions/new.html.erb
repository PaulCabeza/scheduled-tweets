<h2>Login</h2>
<%= form_with url: login_path do |form| %>
  <div class='mb-3'>
    <%= form.label :email %>
    <%= form.text_field :email, class: 'form-control', placeholder: 'email@domain.com' %>
  </div>
  <div class='mb-3'>
    <%= form.label :password %>
    <%= form.password_field :password, class: 'form-control', placeholder:'password' %>
  </div>
  <div  class='mb-3'>
  <%= form.submit 'Log in', class:'btn btn-primary' %>
<% end %>



</div>
